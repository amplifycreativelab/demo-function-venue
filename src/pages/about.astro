---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import aboutHistory from "../assets/images/about-history.png";
import teamSarah from "../assets/images/team-sarah.png";
import teamDavid from "../assets/images/team-david.png";
import teamElena from "../assets/images/team-elena.png";

const base = import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL
    : `${import.meta.env.BASE_URL}/`;
---

<BaseLayout
    title="About Us"
    description="Learn about our history and the team behind this concept function venue demo."
>
    <div class="page-header">
        <div class="container">
            <h1>Our Story</h1>
        </div>
    </div>

    <section class="section">
        <div class="container split-layout">
            <div class="text-block">
                <h2>A Legacy of Celebration</h2>
                <p>
                    Established in 2010, Function Venue has been the backdrop
                    for thousands of unforgettable moments. Located in a
                    beautifully restored heritage building in the heart of
                    a fictional city, we blend classic architectural charm with modern
                    luxury.
                </p>
                <p>
                    Our philosophy is simple: every event deserves to be
                    extraordinary. We pride ourselves on meticulous attention to
                    detail, exceptional service, and a commitment to quality
                    that is evident in everything we do, from our locally
                    sourced menu to our curated wine list.
                </p>
            </div>
            <div class="image-block">
                <Image
                    src={aboutHistory}
                    alt="Venue Exterior"
                    class="rounded-img"
                />
            </div>
        </div>
    </section>

    <section class="section bg-light">
        <div class="container">
            <div class="section-header text-center">
                <h2>Meet The Team</h2>
                <p>
                    Dedicated professionals committed to your event's success.
                </p>
            </div>
            <div class="team-grid">
                <div class="team-member">
                    <Image src={teamSarah} alt="Sarah J" />
                    <h3>Sarah James</h3>
                    <p class="role">Head of Events</p>
                </div>
                <div class="team-member">
                    <Image src={teamDavid} alt="David M" />
                    <h3>David Miller</h3>
                    <p class="role">Executive Chef</p>
                </div>
                <div class="team-member">
                    <Image src={teamElena} alt="Elena R" />
                    <h3>Elena Ross</h3>
                    <p class="role">Wedding Coordinator</p>
                </div>
            </div>
        </div>
    </section>

    <section class="section text-center">
        <div class="container narrow">
            <h2>Experience the Difference</h2>
            <p>
                We invite you to visit our venue and discuss how we can bring
                your vision to life.
            </p>
            <a href={`${base}contact/`} class="btn-primary">Book a Tour</a>
        </div>
    </section>
</BaseLayout>

<style>
    .page-header {
        background-color: var(--color-text);
        color: var(--color-white);
        padding: var(--space-8) 0;
        text-align: center;
    }

    .split-layout {
        display: grid;
        gap: var(--space-8);
    }

    @media (min-width: 768px) {
        .split-layout {
            grid-template-columns: 1fr 1fr;
            align-items: center;
        }
    }

    .rounded-img {
        border-radius: var(--radius-md);
    }
    .bg-light {
        background-color: #faf9f6;
    }
    .text-center {
        text-align: center;
    }
    .narrow {
        max-width: 600px;
    }

    .team-grid {
        display: grid;
        gap: var(--space-6);
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        margin-top: var(--space-8);
    }

    .team-member {
        text-align: center;
    }

    .team-member img {
        border-radius: 50%;
        width: 200px;
        height: 200px;
        object-fit: cover;
        margin: 0 auto var(--space-4);
        border: 3px solid var(--color-white);
        box-shadow: var(--shadow-sm);
    }

    .team-member h3 {
        font-size: 1.25rem;
        margin-bottom: 0.25rem;
    }
    .role {
        color: var(--color-accent-secondary);
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.05em;
    }

    .btn-primary {
        display: inline-block;
        background-color: var(--color-text);
        color: var(--color-white);
        padding: 1rem 2rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 500;
        margin-top: var(--space-4);
    }

    .btn-primary:hover {
        background-color: #000;
    }
</style>
